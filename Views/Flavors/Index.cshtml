@{
  Layout = "_Layout";
}

@using PierresTreat.Models;
@model List<PierresTreat.Models.Flavor>;

<h2>All Flavors</h2>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <p>@Html.ActionLink($"{flavor.Word}", "Details", new { id = flavor.FlavorId })</p>
}

<p>@Html.ActionLink("Add new Flavor", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>