@{
  Layout = "_Layout";
}

@model PierresTreat.Models.Treat

<h2>Treat Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Tags.Count == 0)
{
  <p>This item does not have any special flavors!</p>
}
else
{
  <ul>
  @foreach(var join in Model.Flavors)
  {
    <h3>Tags: @join.Tag.Word</h3>
    @using (Html.BeginForm("DeleteFlavor", "Treats"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }

}


<p>@Html.ActionLink("Add a Tag", "AddFlavor", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Edit Recipe", "Edit", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Delete Recipe", "Delete", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>

<input type="submit" class="btn btn-default" value="Log out" />